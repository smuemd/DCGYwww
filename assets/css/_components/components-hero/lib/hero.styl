/** @define Hero
 *
 * Hero Section for DCGY website
 *
 */

/** @require typorgraphy */


.Hero
  margin-top: rem(-96px)
  padding-top: rem(96px)
  text-align: center;
  overflow: hidden;
  //background-image: url(http://neur.io/wp-content/uploads/2015/08/home-header.jpg)
  //background-size: cover

.Hero-content
  padding-bottom: rem(112px)
  padding-top: rem(64px)

.Hero-title
  margin-bottom: 1rem
  //type-display2
  font-size: 45px;
  font-size: 2.8125rem;
  font-weight: $type-light-font-weight; //300
  line-height: (48 / 45);
.fonts-stage1 .Hero-title
  font-family: $roboto-subset
.fonts-loaded .Hero-title
  font-family: $roboto-light

.Hero-tagline
  margin-bottom: 2.5rem
  //type-title with modifications
  font-size: 20px;
  font-size: 1.25rem;
  font-weight: $type-light-font-weight; //300
  letter-spacing: 0.02em;
  line-height: (32/20);
.fonts-stage1 .Hero-tagline
  font-family: $roboto-subset
.fonts-loaded .Hero-tagline
  font-family: $roboto-light

.Hero-button
  //TODO Seperate out button(large)
  //type-menu
  font-size: 14px;
  font-weight: 400;
  line-height: 1rem;
  //type-button
  background-color: #3CC76A
  border-radius: .25rem
  color: #fff
  display: inline-block
  letter-spacing: 1px;
  margin: 0 auto 24px
  min-width: 220px
  padding: 16px 32px
  text-decoration: none;
  text-transform: uppercase;
  box-shadow: 0 2px 0 0 rgba(0,0,0,.1)
  transition: all .2s

  &:active,
  &:focus,
  &:hover
    background-color: #50cd79;
    color: #fff;
    text-decoration: none

.fonts-stage1 .Hero-button
  font-family: $roboto-subset
.fonts-loaded .Hero-button
  font-family: $roboto-medium

.Hero-link
  display: block;
  text-decoration: none;
  margin-bottom: 8px

  //arrow
  &:before,
  &:after
    pointer-events: none
    display: inline-block
    width: 7px
    height: 7px
    border-top-width: 2px
    border-top-style: solid
    border-right-width: 2px
    border-right-style: solid

    position: relative;
    vertical-align: middle
  &:after
    content: " "
    transform: rotate(45deg)
    margin-left: .3em
