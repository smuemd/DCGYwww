/** @define Page; */

/**
 * Page component
 *
 * A Page defines elements to layout marketing prose and images on
 * the website.
 *
 * Example HTML:
 *
 * <div class="Page">
 *   <div class="Page-content">
 *    <div class="Page-title"></div>
 *    <div class="Page-subtitle"></div>
 *   </div>
 * </div>
 */

/* Page container
   ========================================================================== */

/**
 * Generic wrapper around Page content.
 * Spans 100 % of window width. May receive distict bg color for contrast.
 *
 * 1. Set default backgound for Page
 */

.Page
  //background-color: yellow /* 1 */ //none
  overflow-x: hidden

/* yoomla hack only */
.Page--overflow
  overflow-x: visible;

/* Page content
   ========================================================================== */

/**
 * Contains ALL page content. Everything. Provides top and bottom
 *
 * 1. Create top padding
 * 2. Create bottom padding
 */

.Page-content
  padding-top: 80px /* 1 */
  padding-bottom: 100px /* 2 */

/* Page row
   ========================================================================== */

/**
 * Container for page grid layout.
 * Wraps all Page-colums.
 * May be used in concert with Page-content or stand-alone.
 *
 * 1. Create flex container (via lost grid)
 * 2. Set box sizing of 1st level child nodes to border-box.
 */

.Page-row
  lost-flex-container: row; /* 1 */
  & > *
    box-sizing: border-box /* 2 */

/* Page column
   ========================================================================== */

/**
 * Creates the page's responsive column layout
 * Must be a child node of Page-row.
 *
 * 1. Set Page column and and fullWidth modifier width to 100% of parent node.
 *    (via lost grid)
 */

.Page-column
  lost-column: 1/1 flex /* 1 */

/**
 * Modifier:
 * Size Page colum to 50 % of parent node on lage viwpoints.
 */

.Page-column--1of2
  @media (min-width: 718px)
    lost-column: 1/2 2 8px flex

/* Modifier States: for source ordering. */

.Page-column--1of2.pushLeft
  @media (min-width: 718px)
    lost-move: -1/2 0 8px

.Page-column--1of2.pushRight
  @media (min-width: 718px)
    lost-move: 1/2 0 8px

/**
 * Modifier:
 * Size Page colum to 33 % of parent node on lage viwpoints.
 */

.Page-column--1of3
  @media (min-width: 718px)
    lost-column: 1/3 3 8px flex

/**
 * Modifier:
 * Size Page colum to 25 % of parent node on lage viwpoints.
 */

.Page-column--1of4
  @media (min-width: 718px)
    lost-column: 1/4 4 8px flex

/**
 * Modifier:
 * .
 */

.Page-column--fullWidth
  @extend .Page-column

/* Page prose column
   ========================================================================== */
/**
 * Indicates marketing copy inside a Page column
 * Can be used in conjunction or as alias of .Page-column
 * Wraps around Page-title and Page-subtitle. May contain Features.
 *
 * 1. Alias Page-column
 * 2. Alias Page-column push behavior.
 */


.Page-prose /* 1 */
  @extend .Page-column


/**
 * Modifiers
 * Transform padding of Page prose column when aligned to right or right
 */

 .Page-prose--center
   @extend .Page-column--fullWidth

.Page-prose--left
  @media (min-width: 718px)
    padding-right: 48px

.Page-prose--right
  @media (min-width: 718px)
    padding-left: 48px


/* Page title
   ========================================================================== */
/**
 * Main title headline of Page (type-headline()).
 *
 * 1. Apply font smoothing
 * 2. Font size 24px / 1.5rem
 * 3. Line height 1.33 / 32 px
 *
 */

.Page-title
  //type-display()
  -moz-osx-font-smoothing: grayscale; /* 1 */
  clear: both
  font-weight: normal;
  //opacity:
  //type-headline()
  font-size: 24px;
  font-size: 1.5rem; /* 3 */
  line-height: (32 / 24); /* 3 */

  margin-bottom: 1rem

/**
 * Modifier:
 * Center title text.
 */

.Page-title--center
  text-align: center
  margin-left: auto
  margin-right: auto

/* Page subtitle
   ========================================================================== */
/**
 * Subtitle after title headline of Page.
 *
 * 1. Set auto hyphens for smooth linebraks
 * 2. Set margins
 *
 */

.Page-subtitle
  color $dcgy-color-black-secondary-hex
  hyphens: auto
  margin-bottom: 32px

/**
 * Modifier:
 * Center title text. (Alias Page-title--center)
 */

.Page-subtitle--center
  @extend .Page-title--center
  margin-bottom: 32px

/* Page image
   ========================================================================== */
/**
 * Handles images and graphics in Page container.
 *
 * 1. set display block
 *
 */

//.Page-image
  //display: block

/**
 * Modifier:
 * Center image/graphic horizontally
 * Apply bottom padding
 */

.Page-image--center
  margin: 0 auto
  padding: 16px 0 56px
  & *
    display: block
    margin: auto


.Page-image--right
  padding: 0 0 56px
  @media (min-width: 718px)
    padding: 0
  & > img
    @media (min-width: 718px)
      max-width: 185%

/* Page features
   ========================================================================== */
/**
 * Wraps features in Page container.
 *
 * 1. provide negative margin bottom
 *
 */

.Page-features
  margin-bottom: -32px
